{ 
    "$schema"           : "http://json-schema.org/draft-07/schema#",
    "title"             : "Database configuration file schema",
    "description"       : "Cconfiguration file schema for database configuration",
    "type"              : "object",
    "additionalProperties": false,
    "properties"        : {
        "type"              : {
            "description"       : "Type of database to use",
            "type"              : "string",
            "default"           : "postgres",
            "enum"              : ["postgres"],
            "required"          : false
        },
        "name"              : {
            "description"       : "Name of the database",
            "type"              : "string",
            "minLength"         : 1,
            "required"          : true
        },
        "host"              : {
            "description"       : "Host of the database",
            "type"              : "string",
            "minLength"         : 7,
            "default"           : "localhost",
            "required"          : false
        },
        "port"              : {
            "description"       : "Port the database is hosted on",
            "type"              : "integer",
            "required"          : false
        },
        "username"          : {
            "description"       : "Username used to connect to database",
            "type"              : "string",
            "minLength"         : 1,
            "required"          : true
        },
        "password"          : {
            "description"       : "Password used for authentication",
            "type"              : "string",
            "required"          : true
        }
    }
}
