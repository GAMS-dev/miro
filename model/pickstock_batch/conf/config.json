{
	"UILogo"             : "pickstock.jpg",
    "inputWidgets"        : { 
      "GMSPAR_maxstock": {
         "alias": "MaxStock",
         "widgetType":"slider",
         "label": "maximum number of stocks to select",
         "min": 1,
         "max": "30",
         "default": 5,
         "step": 1
       },
       "GMSPAR_trainingdays": {
         "alias": "TrainingDays",
         "widgetType":"slider",
         "label": "number of days for training",
         "min": 1,
         "max": "252",
         "default": 100,
         "step": 1
       }
    },
    "aggregateWidgets"    : {
       "title"    : "Parameters"
    },
    "saveTraceFile":true,
    "dataRendering"      : {
		"partofportfolio"       : {
            "outType"               : "dtGraph",
            "graph"                 : {
                "tool"                  : "plotly",
                "type"                  : "pie",
				"showlegend"			: true,
                "title"                 : "Part of the portfolio",
                "labels"                : "stockSymbol",
                "values"                : "what part of the portfolio",
                "xaxis"                 : {
                    "showgrid"              : false,
                    "zeroline"              : false,
                    "showticklabels"        : false
                },
                "yaxis"                 : {
                    "showgrid"              : false,
                    "zeroline"              : false,
                    "showticklabels"        : false
                }
            }
        },
		"dowvsindex"   	: {
			"outType"               : "graph",
			"height"				: 700,
			"graph"                 : {
				"tool"      			: "dygraph",
				"title"     			: "Dow Jones vs. Index Fund",
				"dyOptions"				:{
					"includeZero"			: false,
					"logscale"				: false,
					"drawGrid"				: true,
					"drawPoints"			: false,
					"pointSize"				: 2,
					"fillGraph"				: false,
					"fillAlpha"				: 0.15
				},
				"dyHighlight"   :{
					"highlightSeriesOpts" :{
					  "strokeWidth"    : 3,
					  "strokeBorderWidth"  : 1,
					  "highlightCircleSize" : 5
					},
					"hideOnMouseOut"  : true
				},
				"dylegend"				:{
					"width"					: 450,
					"show"					: "always",
					"hideOnMouseOut"		: true
				},
				"dyRangeSelector"		:{
					"height"				: 20,
					"strokeColor"			: ""
				},
				"dyEvent"    :{
					"lastDayTraining"  : {
						 "label"     	: "End of training phase",
						 "labelLoc"     : "bottom",
						 "color"        : "red"
					}
				},				
				"xdata"     			: "date",
				"ydata" 				: {
					"dow jones"    			: {
						"label"					: "Dow Jones index",
						"stepPlot"      		: false,
						"stemPlot"      		: false,
						"fillGraph"				: true,
						"drawpoints"			: true
					},
					"index fund"    		: {
						"label"					: "Index fund",
						"stepPlot"      		: false,
						"stemPlot"      		: false,
						"fillGraph"				: false,
						"drawpoints"			: true
					}
				},
				"xaxis"     :{
					"title"         		: "Date"
				},		
				"yaxis"     :{		
					"title"         		: "Price"
				}
			}
		},
		"abserror"       : {
            "outType"               : "dtGraph",
			"height"				: 700,
            "graph"                 : {
                "tool"                  : "plotly",
                "type"                  : "hist",
				"histnorm"				: "percent",
				"nbins"					: 20,
				"barmode"				: "overlay",
				"alpha"					: 0.6,
                "title"                 : "Absolute Error: Dow Jones vs. Index Fund",
				"xdata" 				: {
					"absolute error train"	: {
						"labels"				: "training",
						"color"					: "darkgreen",
						"alpha"					: 0.6
					},
					"absolute error test" 	: {
						"labels"				: "test",
						"color"					: "red",
						"alpha"					: 0.6
					}
				},
                "xaxis"                 : {
				    "title"					: "Absolute Error"
                },
                "yaxis"                 : {
					"title"					: "Frequency"
                }
            }
		}
	}
}
