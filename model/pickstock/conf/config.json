{
	"UILogo"             : "pickstock.png",
    "hiddenOutputScalars": ["lastdaytraining"],
    "inputWidgets":{
      "price":{
        "widgetType": "table",
        "readonlyCols": ["date"]
      },
      "maxstock": {
        "label": "Select the maximum number of stocks",
        "min": 1,
        "default": 3,
        "step": 1,
        "max": "card(price$symbol)",
        "alias": "maximum number of stocks to select",
        "widgetType": "slider"
      },
      "trainingdays": {
        "label": "select the number of days for training",
        "min": 1,
        "default": 99,
        "step": 1,
        "max": "card(price$date)",
        "alias": "number of days for training",
        "widgetType": "slider"
      },
      "GMSOPT_lp": {
        "alias": "LP-Solver",
        "widgetType":"dropdown",
        "label": "Solver to use for LP",
        "aliases": [
          "BARON",
          "BDMLP",
          "CBC",
          "CONOPT 3",
          "CONOPT 4",
          "CPLEX",
          "DECIS",
          "GUROBI",
          "IPOPT",
          "KNITRO",
          "LGO",
          "LINDO",
          "LINDOGLOBAL",
          "MINOS",
          "MOSEK",
          "SNOPT",
          "SOPLEX",
          "XA",
          "XPRESS"
        ],
        "choices": [
          "BARON",
          "BDMLP",
          "CBC",
          "CONOPT3",
          "CONOPT4",
          "CPLEX",
          "DECIS",
          "GUROBI",
          "IPOPT",
          "KNITRO",
          "LGO",
          "LINDO",
          "LINDOGLOBAL",
          "MINOS",
          "MOSEK",
          "SNOPT",
          "SOPLEX",
          "XA",
          "XPRESS"
        ],
        "selected": "CPLEX"
      }
    },
    "dataRendering"      : {
		"price"   	: {
			"outType"               : "graph",
			"height"				: 700,
			"graph"                 : {
				"tool"      			: "dygraphs",
				"title"     			: "Stock prices over time (year: 2016)",
				"color"					: "symbol",
				"dyOptions"				:{
					"includeZero"			: true,
					"logscale"				: false,
					"drawGrid"				: true,
					"drawPoints"			: false,
					"pointSize"				: 2,
					"fillGraph"				: false,
					"fillAlpha"				: 0.15
				},
				"dylegend"				:{
					"width"					: 450,
					"show"					: "always",
					"hideOnMouseOut"		: true
				},
				"dyHighlight"			:{
					"highlightSeriesOpts"	:{
						"strokeWidth" 			: 3,
						"strokeBorderWidth"		: 1,
						"highlightCircleSize"	: 5
					},
					"hideOnMouseOut"		: true
					
				},
				"dyRangeSelector"		:{
					"height"				: 20,
					"strokeColor"			: ""
				},						
				"xdata"     			:"date",
				"ydata" 				: {
					"Price":{
						"label"					: "symbol"
					}
				},
				"xaxis"     :{
					"title"         		: "date",
                    "showgrid"              : true
				},		
				"yaxis"     :{		
					"title"         		: "value",
                    "showgrid"              : true
				}
			}
		},
		"partofportfolio"       : {
            "outType"               : "dtGraph",
            "graph"                 : {
                "tool"                  : "plotly",
                "type"                  : "pie",
				"showlegend"			: true,
                "title"                 : "Part of the portfolio",
                "labels"                : "symbol",
                "values"                : "value",
                "xaxis"                 : {
                    "showgrid"              : false,
                    "zeroline"              : false,
                    "showticklabels"        : false
                },
                "yaxis"                 : {
                    "showgrid"              : false,
                    "zeroline"              : false,
                    "showticklabels"        : false
                }
            }
        },
		"dowvsindex"   	: {
			"outType"               : "graph",
			"height"				: 700,
			"graph"                 : {
				"tool"      			: "dygraphs",
				"title"     			: "Dow Jones vs. Index Fund",
				"dyOptions"				:{
					"includeZero"			: false,
					"logscale"				: false,
					"drawGrid"				: true,
					"drawPoints"			: false,
					"pointSize"				: 2,
					"fillGraph"				: false,
					"fillAlpha"				: 0.15
				},
				"dyHighlight"   :{
					"highlightSeriesOpts" :{
					  "strokeWidth"    : 3,
					  "strokeBorderWidth"  : 1,
					  "highlightCircleSize" : 5
					},
					"hideOnMouseOut"  : true
				},
				"dylegend"				:{
					"width"					: 450,
					"show"					: "always",
					"hideOnMouseOut"		: true
				},
				"dyRangeSelector"		:{
					"height"				: 20,
					"strokeColor"			: ""
				},
				"dyEvent"    :{
					"lastdaytraining"  : {
						 "label"     	: "End of training phase",
						 "labelLoc"     : "bottom",
						 "color"        : "red"
					}
				},				
				"xdata"     			: "date",
				"ydata" 				: {
					"dj"    			: {
						"label"					: "Dow Jones index",
						"stepPlot"      		: false,
						"stemPlot"      		: false,
						"fillGraph"				: true,
						"drawpoints"			: true
					},
					"index fund"    		: {
						"label"					: "Index fund",
						"stepPlot"      		: false,
						"stemPlot"      		: false,
						"fillGraph"				: false,
						"drawpoints"			: true
					}
				},
				"xaxis"     :{
					"title"         		: "Date"
				},		
				"yaxis"     :{		
					"title"         		: "Price"
				}
			}
		},
		"abserror"       : {
            "outType"               : "dtGraph",
			"height"				: 700,
            "graph"                 : {
                "tool"                  : "plotly",
                "type"                  : "hist",
				"histnorm"				: "percent",
				"nbins"					: 20,
				"barmode"				: "overlay",
				"alpha"					: 0.6,
                "title"                 : "Absolute Error: Dow Jones vs. Index Fund",
				"xdata" 				: {
					"absolute error train"	: {
						"labels"				: "training",
						"color"					: "darkgreen",
						"alpha"					: 0.6
					},
					"absolute error test" 	: {
						"labels"				: "test",
						"color"					: "red",
						"alpha"					: 0.6
					}
				},
                "xaxis"                 : {
				    "title"					: "Absolute Error"
                },
                "yaxis"                 : {
					"title"					: "Frequency"
                }
            }
		}
	}
}
