{
  "name": "com.gams.miro",
  "version": "1.9.99",
  "description": "GAMS MIRO is an interactive web application for GAMS models. It is designed for people working with GAMS looking for an easy and automated way to deploy their models. Extensive visualization options support you to make decisions based on optimization.",
  "homepage": "https://gams.com/miro",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "node ./test/run-tests.js",
    "start": "electron .",
    "pack": "node ./build/scripts/pre-pack.js && electron-builder --dir --publish never",
    "dist": "node ./build/scripts/pre-pack.js && electron-builder --publish never",
    "docker-prepare": "node ./build/scripts/pre-pack.js --docker",
    "docker-build-ci": "node ./build/scripts/pre-pack.js --docker --ci"
  },
  "build": {
    "appId": "com.gams.miro",
    "productName": "GAMS MIRO",
    "afterPack": "build/scripts/sign-dmg.js",
    "afterAllArtifactBuild": "build/scripts/notarize.js",
    "extraResources": [
      "src/conf/*",
      "src/global.R",
      "src/app.R",
      "src/LICENSE",
      "src/modules/**",
      "src/components/**",
      "src/JS/**",
      "src/www/**",
      "src/resources/**",
      "src/examples/**",
      "src/tools/**",
      "src/UI/**",
      "src/start-shiny.R",
      "src/migrations/**"
    ],
    "files": [
      "**/*",
      "!doc/**",
      "!scripts/**",
      "!r/**",
      "!r-src/**",
      "!electron-builder.env",
      "!src/**"
    ],
    "fileAssociations": [
      {
        "ext": "miroapp",
        "name": "MIRO App",
        "description": "MIRO Application",
        "mimeType": "application/miro"
      },
      {
        "ext": "miroscen",
        "name": "MIRO Scenario",
        "description": "MIRO Scenario",
        "mimeType": "application/miro"
      }
    ],
    "mac": {
      "extraResources": [
        "r"
      ],
      "category": "public.app-category.productivity",
      "icon": "./build/icon.icns",
      "darkModeSupport": true,
      "target": [
        "dmg"
      ]
    },
    "win": {
      "extraFiles": [
        "r/**"
      ],
      "target": "nsis",
      "rfc3161TimeStampServer": "http://timestamp.apple.com/ts01",
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "./build/installerSidebar.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/uninstaller.nsh"
    },
    "linux": {
      "extraFiles": [
        "r/**",
        "scripts/globals.R",
        "scripts/install_source.R"
      ],
      "artifactName": "GAMS-MIRO-${version}.${ext}",
      "target": "AppImage",
      "category": "Science"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GAMS-dev/miro.git"
  },
  "keywords": [
    "GAMS",
    "MIRO",
    "Launcher"
  ],
  "author": "GAMS Development Corp.",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "22.10.4",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "ajv": "^6.10.2",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.0",
    "electron-log": "^4.3.3",
    "electron-store": "^7.0.3",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1",
    "portscanner": "^2.2.0",
    "tree-kill": "^1.2.2",
    "which": "^2.0.2",
    "yauzl": "^2.10.0"
  }
}
