pipeline {
    agent none

    options {
        buildDiscarder(logRotator(numToKeepStr: '2', daysToKeepStr: '1'))
        disableConcurrentBuilds()
    }

    stages {
        stage('Pack') {
            parallel {
                stage('linux'){
                    agent { label 'master' }
                        steps {
                            step([$class: 'WsCleanup'])
                            checkout([$class: 'GitSCM', branches: [[name: 'refs/heads/'+env.BRANCH_NAME]], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'GitLFSPull']], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'd60edbb5-9329-4eba-81b2-448d800c4002', url: 'git@git.gams.com:fproske/gmswebui.git']]])
                            sh '''
                                echo "Do the linux packaging stuff here."
                            '''
                        }
                }
                stage ('windowsX64') {
                    agent { label 'windowsX64' }
                    steps {
                        step([$class: 'WsCleanup'])
                        checkout([$class: 'GitSCM', branches: [[name: 'refs/heads/'+env.BRANCH_NAME]], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'GitLFSPull']], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'd60edbb5-9329-4eba-81b2-448d800c4002', url: 'git@git.gams.com:fproske/gmswebui.git']]])
                        
                        withCredentials([usernamePassword(credentialsId: '7d79afcd-90b2-42b6-8327-e2f92dcc4adf', passwordVariable: 'password', usernameVariable: 'username')]) {
                          fileOperations([fileDownloadOperation(password: password, targetFileName: 'GMSR.zip', targetLocation: 'installer/win', url: 'https://cloud.gams.com/remote.php/webdav/Share/Freddy/libraries/GMSR_win.zip', userName: username)])
                          fileOperations([fileDownloadOperation(password: password, targetFileName: 'GMSCMEX.zip', targetLocation: 'installer/win', url: 'https://cloud.gams.com/remote.php/webdav/Share/Freddy/libraries/GMSCMEX_win.zip', userName: username)])
                        }
                        fileOperations([fileDownloadOperation(password: '', targetFileName: 'windows_x64_64.exe', targetLocation: 'installer/win', url: 'https://d37drm4t2jghv5.cloudfront.net/distributions/26.1.0/windows/windows_x64_64.exe', userName: '')])
                        withCredentials([certificate(aliasVariable: '', credentialsId: '302df092-b329-47b9-8f7a-605da075126d', keystoreVariable: 'WIN_CERT_FILE', passwordVariable: 'WIN_CERT_PASSWD')]) {
                            bat '''
                                for /f "tokens=*" %%i in ('findstr /B /C:"MIROVersion <-" app.R') do set MIRO_VERSION=%%i
                                set MIRO_VERSION=%MIRO_VERSION:MIROVersion <- =%
                                
                                cd installer\\win
                                mkdir innofiles
                                windows_x64_64.exe /sp- /silent /dir=%WORKSPACE%\\installer\\win\\innofiles /MERGETASKS='!desktopicon'
                                rem Cleanup installation
                                cd %WORKSPACE%\\installer\\win\\innofiles
                                gbin\\rm -f .uninstinfo.ini unins000.dat unins000.exe gamside.url

                                rem R installation
                                gbin\\cp %WORKSPACE%\\installer\\win\\GMSR.zip %WORKSPACE%\\installer\\win\\innofiles
                                gmsunzip -qq -o GMSR.zip
                                gbin\\rm -f GMSR.zip

                                rem Python modules
                                cd %WORKSPACE%\\installer\\win\\innofiles\\GMSPython\\Scripts
                                pip install matplotlib pandas numpy xlsxwriter pandas_datareader geocoder geopy
                                cd %WORKSPACE%\\installer\\win\\innofiles

                                rem miro libinclude
                                copy /Y %WORKSPACE%\\model\\miro.gms inclib

                                mkdir miro
                                gbin\\rm -rf miro\\*
                                gbin\\cp -r %WORKSPACE%\\JS miro
                                gbin\\cp -r %WORKSPACE%\\R miro
                                gbin\\cp -r %WORKSPACE%\\UI miro
                                gbin\\cp -r %WORKSPACE%\\conf miro
                                gbin\\cp -r %WORKSPACE%\\modules miro
                                gbin\\cp -r %WORKSPACE%\\resources miro
                                gbin\\cp -r %WORKSPACE%\\tools miro
                                gbin\\cp -r %WORKSPACE%\\www miro
                                gbin\\cp    %WORKSPACE%\\LICENSE miro
                                gbin\\cp    %WORKSPACE%\\app.R miro
                                gbin\\cp    %WORKSPACE%\\global.R miro

                                rem APILIB Example models
                                cd %WORKSPACE%\\model\\kport
                                %WORKSPACE%\\installer\\win\\innofiles\\gmszip -r kport_conf.zip conf\\kport.json static customRenderer
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp kport_conf.zip kport.gms %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f kport_conf.zip

                                cd %WORKSPACE%\\model\\pickstock
                                %WORKSPACE%\\installer\\win\\innofiles\\gmszip -r pickstock_conf.zip conf\\pickstock.json static customRenderer
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp pickstock_conf.zip pickstock.gms dowjones2016.csv %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f pickstock_conf.zip

                                cd %WORKSPACE%\\model\\pickstock_live
                                %WORKSPACE%\\installer\\win\\innofiles\\gmszip -r pickstock_live_conf.zip conf\\pickstock_live.json static customRenderer
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp pickstock_live_conf.zip pickstock_live.gms %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f pickstock_live_conf.zip

                                cd %WORKSPACE%\\model\\transport
                                %WORKSPACE%\\installer\\win\\innofiles\\gmszip -r transport_conf.zip conf\\transport.json static customRenderer
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp transport_conf.zip transport.gms %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f transport_conf.zip

                                cd %WORKSPACE%\\model\\transport_live
                                %WORKSPACE%\\installer\\win\\innofiles\\gmszip -r transport_live_conf.zip conf\\transport_live.json static customRenderer
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp transport_live_conf.zip transport_live.gms %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f transport_live_conf.zip

                                cd %WORKSPACE%
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp -f mkconfig.inc datalib.glb %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml

                                cd %WORKSPACE%\\installer\\win\\innofiles\\datalib_ml
                                echo $include mkconfig.inc >> kport.gms
                                echo $include mkconfig.inc >> pickstock.gms
                                echo $include mkconfig.inc >> pickstock_live.gms
                                echo $include mkconfig.inc >> transport.gms
                                echo $include mkconfig.inc >> transport_live.gms

                                rem Newer cmex
                                cd %WORKSPACE%\\installer\\win
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\cp GMSCMEX.zip %WORKSPACE%\\installer\\win\\innofiles
                                %WORKSPACE%\\installer\\win\\innofiles\\gmsunzip -o -qq GMSCMEX.zip
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -f %WORKSPACE%\\installer\\win\\innofiles\\GMSCMEX.zip

                                cd %WORKSPACE%\\installer\\win
                                mkdir output
                                %WORKSPACE%\\installer\\win\\innofiles\\gbin\\rm -rf output\\*
                                
                                iscc "%WORKSPACE%\\installer\\win\\miro.iss" /DMIROVersion=%MIRO_VERSION% /DMyDirVersion=miro04
                                
                                echo Setting up environment for VS2017 usage...
                                cd "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build"
                                call vcvars64.bat
                                cd %WORKSPACE%\\installer\\win\\output
                                signtool sign /v /f %WIN_CERT_FILE% /p %WIN_CERT_PASSWD% /tr http://timestamp.comodoca.com/rfc3161 GAMS_MIRO-%MIRO_VERSION%.exe
                            '''
                        }
                        archiveArtifacts artifacts: '**/GAMS_MIRO-*.exe', fingerprint: true
                    }
                }
            }
        }        
    }
}
